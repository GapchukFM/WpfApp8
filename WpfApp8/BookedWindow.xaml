<Window x:Class="WpfApp8.BookedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOOKED" Height="450" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Your booked item:" FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10"/>

		<ScrollViewer Grid.Row="1">
			<StackPanel Name="BookedList">
				
<StackPanel Orientation="Horizontal" Margin="10" Background="LightYellow">
                    <TextBlock Text="title" Width="200" Margin="5"/>
                    <TextBlock Text="Date: 01.01.2024" Width="150" Margin="5"/>
                    <Button Content="cancel" Width="100" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Window>
