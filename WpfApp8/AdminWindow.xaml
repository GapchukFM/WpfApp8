<Window x:Class="LoginApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Admin Panel" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Margin="20">
            <TextBlock Text="Add Inventory Item:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Name="ItemNameTextBox" Margin="0,5,0,5"/>
            <TextBlock Text="Item Price:" Margin="0,5,0,0"/>
            <TextBox Name="ItemPriceTextBox" Margin="0,5,0,5"/>
            <Button Content="Add Item" Click="AddItemButton_Click" Width="100" Margin="0,5,0,0"/>

            <TextBlock Text="Remove Inventory Item:" FontWeight="Bold" Margin="0,20,0,0"/>
            <TextBox Name="RemoveItemNameTextBox" Margin="0,5,0,5"/>
            <Button Content="Remove Item" Click="RemoveItemButton_Click" Width="100" Margin="0,5,0,0"/>

            <Button Content="exit" Click="ExitButton_Click" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
