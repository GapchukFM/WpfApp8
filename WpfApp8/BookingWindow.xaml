<Window x:Class="LoginApp.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BOOKING" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Select a date:" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,47,0,0"/>
        <DatePicker Name="BookingDatePicker" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Margin="0,10,0,0"/>
        <Button Content="Pay" Grid.Row="2" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" Click="PayButton_Click"/>
    </Grid>
</Window>
